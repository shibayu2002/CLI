package net.zive.shibayu.cli;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileReader;
import java.io.IOException;

import gnu.getopt.Getopt;
import gnu.getopt.LongOpt;

/**
 * cat処理.
 * @author Yu.Sba
 *
 */
public class JCat extends BaseCli {
    /**
     * ファイルパス.
     */
    private File file = null;

    /**
     * 終了行.
     */
    private long endLine = -1;

    @Override
    protected final boolean checkArgs(final String[] args) {
        Getopt g = new Getopt(this.getClass().getName(), args, "e:");

        int c = -1;
        while ((c = g.getopt()) != -1) {
            switch (c) {
            case 'e':
                endLine = Integer.parseInt(g.getOptarg());
                break;
            default:
            }
        }

        if (args.length == 0) {
            setSystemInMode(true);
        } else {
            file = new File(args[0]);
        }
        return true;
    }

    @Override
    protected final void peform() throws Exception {
        BufferedReader br = new BufferedReader(new FileReader(file));

        String str = null;
        long cnt = 0;
        try {
            while ((str = br.readLine()) != null) {
                System.out.println(str);
                cnt = cnt + 1;
                if (cnt > endLine) {
                    break;
                }
            }
        } catch (IOException e) {
            throw e;
        } finally {
            br.close();
        }
    }

    @Override
    protected final void receiveSystemInLine(final String line) {
        file = new File(line);
    }

    @Override
    protected final String helpString() {
        StringBuilder stb = new StringBuilder();
        stb.append("<概要>\n");
        stb.append("指定されたファイルの内容を標準出力に出力する。\n\n");
        stb.append("<コマンド>\n");
        stb.append("cat [FILE]\n\n");
        stb.append("<引数>\n");
        stb.append("FILE:ファイルパス(※省略可)\n");
        stb.append("* FILEを省略した場合は標準入力からファイルパスを指定する。\n");
        return stb.toString();
    }

    @Override
    protected final String usageString() {
        return "Usage:jcat [FILE]";
    }

    /**
     * メイン処理.
     * @param args コマンド引数
     */
    public static void main(final String[] args) {
        String[] as = {"-e"};
        (new JCat()).exec(as);
    }
}
